{
  "manifest_version": 3,
  "name": "X Scam Eyes",
  "version": "1.0",
  "description": "Those you don't necessarily need to know, but when you meet them you should see their true face.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://*.twitter.com/*",
    "https://x.com/*",
    "https://*.x.com/*"
  ],
  "icons": {
  "16": "icons/favicon-16.png",
  "32": "icons/favicon-32.png",
  "48": "icons/favicon-48.png",
  "128": "icons/favicon-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://*.twitter.com/*",
        "https://x.com/*",
        "https://*.x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
